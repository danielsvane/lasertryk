extends ../../../views/layout

block append head
  != js("/assets/js/jquery.ui.widget")
  != js("/assets/js/jquery.iframe-transport")
  != js("/assets/js/jquery.fileupload")
  != js("/lib/products/businesscards/client/client")

block content

  .row
    .span12
      ul.breadcrumb
        li
          a(href="/products") Produkter
          span.divider /
        li.active Visitkort
    .span4
      form#product-form
        label Medie
        select.input-block-level#media(name="media")
          option(value=0) Farvetryk på én side
          option(value=1) Farvetryk på begge sider
          option(value=2) 4-sidet
        label Antal
        select.input-block-level#amount(name="amount")
          option 250
          option 500
        label Personer
        select.input-block-level#numPeople(name="numPeople")
          option 1
          option 2
          option 3
          option 4
          option 5
          option 10
        .btn.btn-primary.btn-block#calculate Beregn
    .span8#price-container
      #price
      a.btn.btn-large.btn-success#upload Bestil

  // Image upload modal
  .modal.hide(tabindex="-1")#modal
    .modal-header
      button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
      h3 Upload grafik
    .modal-body
      span.btn.btn-success.fileinput-button.btn-block.btn-large
        span Vælg fil
        input#fileupload(type="file", name="files[]", data-url="/uploadprint", multiple)